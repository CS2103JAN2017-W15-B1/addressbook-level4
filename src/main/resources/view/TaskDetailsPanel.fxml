<AnchorPane fx:id="display" id="taskselectiondisplay"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox fx:id="taskDetails" prefHeight="50.0" minWidth="200.0" xmlns:fx="http://javafx.com/fxml" VBox.vgrow = "ALWAYS">
        <stylesheets>
            <URL value="@BlueTheme.css" />
            <URL value="@Extensions.css" />
        </stylesheets>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <children>
            <Label id="textForTaskDetails" text="Task Details" VBox.vgrow="ALWAYS"></Label>
            <HBox>
                <children>
                <HBox fx:id="status">
                <padding>
                    <Insets right = "5"/>
                </padding>
                </HBox>
                <Label fx:id="nameLabel" styleClass="cell_bigger_label" prefWidth="300.0" wrapText="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"></Label>
                </children>
            </HBox>
            <Label fx:id="tagsheader" styleClass="cell_big_label"></Label>
            <FlowPane fx:id="tags"></FlowPane>
            <Label fx:id="startLabel" styleClass="cell_big_label"></Label>
            <Label fx:id="endLabel" styleClass="cell_big_label"></Label>
            <Label fx:id="description" styleClass="cell_small_label" prefWidth="300.0" wrapText="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"></Label>
        </children>
    </VBox>
</AnchorPane>

